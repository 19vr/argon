{
    "compilerOptions": {
        "target": "es5",
        "module": "system",
        "declaration": true,
        "emitDecoratorMetadata": false,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "pretty": true,
        "sourceMap": false,
        "strictNullChecks": true,
        "noUnusedLocals": true,
        "traceResolution": false,
        "lib": null,
        "moduleResolution": "node"
    },
    "include": [
        "src/**/*.ts"
    ]
}
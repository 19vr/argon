{
    "compilerOptions": {
        "target": "es5",
        "module": "system",
        "outDir": "dist/src",
        "declaration": true,
        "emitDecoratorMetadata": false,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "pretty": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "noUnusedLocals": true,
        "traceResolution": false,
        "lib": ["es2015", "dom"],
        "moduleResolution": "node"
    },
    "include": [
        "src/**/*.ts",
        "test/test.ts"
    ]
}